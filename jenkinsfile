pipeline{
 agent any
 environment {
    ANYPOINT = credentials('Anypoint')
 }
 stages {
 	stage ('Build'){
 		steps {
 				sh 'mvn -f pom.xml clean install'
 		}
 	}
 	stage ('Deploy'){
 		steps {
 				sh 'mvn -f pom.xml deploy  -Dusername=$ANYPOINT_USR -Dpassword=$ANYPOINT_PSW -Denvironment=Sandbox -DmuleDeploy'
 			}
 	    }
     }
}